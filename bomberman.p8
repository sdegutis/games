version 33
__lua__


-- note: make them waterbombs
-- that way no one gets hurt.

function _init()
	p1=makeplayer(8,8,16)
	p2=makeplayer(104,104,32)
end

function _draw()
	cls()
	map()
	drawplayer(p1)
	drawplayer(p2)
	
	-- test
	
	if t() < 3.2 then
	
	local s = 4
	if t() % 1 < 0.5 then s=5 end
	local now=t()>3
	if now then s=6 end
	
	spr(s,40,40)
	if now then
		local z = min(4,flr((t()-3)*40))
		for x=1,z do
			spr(22,40+(x*8),40)
			spr(22,40-(x*8),40)
		end
		for y=1,z do
			spr(38,40,40+(y*8))
			spr(38,40,40-(y*8))
		end
	end
	
	end
	-- test
end

function _update()
	
end

function drawplayer(p)
	for i=1,15 do pal(i,1) end
	_drawplayer(p,p.x+1,p.y+1)
	pal()
	_drawplayer(p,p.x,p.y)
end

function _drawplayer(p,x,y)
	spr(p.s,x,y)
end

function makeplayer(x,y,s)
	return {
		x=x,
		y=y,
		mx=0,
		my=0,
		dx=0,
		dy=0,
		vx=0,
		vy=0,
		speed=2,
		power=2,
		s=s,
	}
end

