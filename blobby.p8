pico-8 cartridge // http://www.pico-8.com
version 42
__lua__


function _init()
	ents={}

	cx=0
	cy=0

	for y=0,127 do
		for x=0,63 do
			local s = mget(x,y)
			if fget(s, 0) then
				-- solid
				makesolid(s,x*8,y*8)
				mset(x,y,1)
			elseif fget(s, 3) then
				makeplayer(s,x*8,y*8)
				mset(x,y,1)
			end
		end
	end
end

function _update()
	for e in all(ents) do
		if (e.update) e:update()
	end
end

function _draw()
	cls()
	camera(cx,cy)
	map()
	for e in all(ents) do
		if (e.draw) e:draw()
	end
end

function makeplayer(s,x,y)
	add(ents, {
		s=s,x=x,y=y,
		vx=0,vy=0,
		draw=drawplayer,
		update=updateplayer,
	})
end

function makesolid(s,x,y)
	add(ents, {
		s=s,x=x,y=y,
		draw=drawsimple,
	})
end

function drawplayer(p)
	spr(p.s, p.x, p.y)
end

function drawsimple(e)
	spr(e.s, e.x, e.y)
end

speed=0.5
maxspeed=3
gravity=0.80
maxgrav=9
jumpspeed=7

function updateplayer(p)
	    if btn(➡️) then p.vx=min(p.vx+speed,maxspeed)
	elseif btn(⬅️) then p.vx=max(p.vx-speed,-maxspeed)
	elseif p.vx > speed then p.vx = p.vx - speed
	elseif p.vx < -speed then p.vx = p.vx + speed
	elseif p.vx != 0 then p.vx=0
	end
	if (p.vx) trymove(p, 'x', p.vx)

	if p.grounded and btn(❎) then
		p.vy = -jumpspeed
	else
		p.vy = min(p.vy + gravity, maxgrav)
	end
	
	p.grounded = not trymove(p, 'y', p.vy)
	if p.grounded then
		p.vy = 0
	end
end

function trymove(e,d,v)
	local s = sgn(v)
	for i=s,v,s do
		e[d] += s

		for o in all(ents) do
			if o != e and e.x >= o.x - 7
								and e.y >= o.y - 7
								and e.x < o.x + 7
								and e.y < o.y + 7
			then
				e[d] -= s
				return false
			end
		end
	end
	return true
end

