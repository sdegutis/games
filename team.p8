-- teamwork:
--   game that sarah and abbey
--   can play together
--   to practice teamwork
--   in a slightly fun way

skiptitle=true

function _init()
	_level=1
	starttitle()
	if(skiptitle)startgame()
end

function starttitle()
	progress = 0
	_draw=drawtitle
	_update=updatetitle
end

function nextlevel()
	_level+=1
	starttitle()
end

function drawtitle()
	cls(1)
	print("level ".._level,50,50,7)
	local w = progress * (80-45)
	line(45,60,80  ,60,0)
	line(45,60,45+w,60,2)
end

function updatetitle()
	progress += (1/30/3) -- 3 sec
	if progress >= 1 then
		startgame()
	end
end

-->8
function startgame()
	_draw=drawgame
	_update=updategame
	
	parselevel()
	
	players={}
	add(players, makeplayer(0))
	add(players, makeplayer(1))
end

function drawgame()
	cls()
	drawview(players[1])
	drawview(players[2])
end

function makeplayer(n)
	return {
		n=n,
		viewx=n*65,
		x=0,
		y=0,
	}
end

function drawview(p)
	clip(p.viewx, 0, 63, 128)
	
	camera(-p.viewx+p.x, -0+p.y)
	
	map(mapx, mapy)
	
	foreach(players, drawplayer)
	
	camera()
	
	clip()
end

function drawplayer(p)
	spr(3, p.x,p.y)
end

function updategame()
	foreach(players, updateplayer)
end

function updateplayer(p)
	if(btn(➡️,p.n)) p.x+=1
	if(btn(⬅️,p.n)) p.x-=1
	if(btn(⬆️,p.n)) p.y-=1
	if(btn(⬇️,p.n)) p.y+=1
end

function parselevel()
	mapx, mapy = getmapspot()
	
	level = {}
	
	for y=0,31 do
		local row = {}
		for x=0,31 do
			add(row, mget(x,y))
		end
		add(level, row)
	end
end

function getmapspot()
	local l = _level-1
	if l < 4 then
		return l*32, 0
	else
		return (l-4)*32, 32
	end
end

